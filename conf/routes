# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

## Layout
#GET         /layout                    controllers.Application.layout

# Tables
GET         /tables                    controllers.Application.tables

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

#Auth
POST        /signup              controllers.AuthController.signup
GET         /login               controllers.Application.login
POST        /login               controllers.AuthController.login
POST        /logout              controllers.AuthController.logout
GET         /secure              controllers.AuthController.securedSampleAction

#EgresadosController
#GET         /search             controllers.EgresadosController.search
#POST        /search             controllers.EgresadosController.doSearch

#LinkedInScraper
GET          /linkedin/search    controllers.LinkedinUserProfileController.saveLinkedinUserProfile